<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Honey_check">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="케미리뷰"
        android:textColor="@android:color/black"
        android:textSize="25dp"

        android:textStyle="bold" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/bad_num"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="267dp"
            android:text="0" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/layout1" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/layout1" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/plus" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/hotba_icon" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="150dp"
            android:text="맥스봉"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="200dp"
            android:text="총 리뷰 10개"
            android:textSize="22sp" />

        <Button
            android:id="@+id/WriteReviewButton"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="195dp"
            android:text="리뷰쓰기"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="240dp"
            app:srcCompat="@drawable/____" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="240dp"
            android:text="harim"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="260dp"
            app:srcCompat="@drawable/sample2" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="265dp"
            android:text="1시간 전" />

        <ImageButton
            android:id="@+id/good"
            android:layout_width="28dp"
            android:layout_height="24dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="240dp"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/good_icon" />

        <ImageButton
            android:id="@+id/bad"
            android:layout_width="28dp"
            android:layout_height="24dp"
            android:layout_marginLeft="305dp"
            android:layout_marginTop="240dp"
            android:background="#FFFFFF"
            android:rotation="180"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/good_icon" />

        <TextView
            android:id="@+id/good_num"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="267dp"
            android:text="0" />



    </FrameLayout>

</LinearLayout>