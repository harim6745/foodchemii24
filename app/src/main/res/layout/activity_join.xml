<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:context=".Join">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ff8550"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="케미푸드24 가입"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                >

                <EditText
                    android:id="@+id/user_id"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:background="#ff8550"
                    android:drawableStart="@drawable/abc_vector_test"
                    android:drawableLeft="@drawable/abc_vector_test"
                    android:hint="ID"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"

                    />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Check ID"
                    android:layout_gravity="center"
                    android:id="@+id/validateButton"
                    android:textColor="#ffffff"/>


            </LinearLayout>


            <EditText

                android:inputType="textPassword"

                android:layout_width="280dp"

                android:layout_height="wrap_content"

                android:hint="PASSWORD"

                android:layout_gravity="center"

                android:padding="10dp"

                android:textColor="#ffffff"

                android:textColorHint="#ffffff"

                android:id="@+id/user_pw"

                android:layout_marginTop="10dp"

                android:background="#ff8550"

                />

            <EditText

                android:inputType="textPassword"

                android:layout_width="280dp"

                android:layout_height="wrap_content"

                android:hint="pwc"

                android:layout_gravity="center"

                android:padding="10dp"

                android:textColor="#ffffff"

                android:textColorHint="#ffffff"

                android:id="@+id/user_pwc"

                android:layout_marginTop="10dp"

                android:background="#ff8550"

                />

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="sex"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:id="@+id/user_sex"
                android:background="#ff8550"
                ></EditText>

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/user_age"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_marginTop="10dp"
                android:background="#ff8550"
                android:hint="age"
                ></EditText>


            <Button

                android:layout_width="280dp"

                android:layout_height="wrap_content"

                android:textSize="20dp"

                android:textStyle="bold"

                android:textColor="#ffffff"

                android:background="#FFCA6C"

                android:text="회원가입"

                android:layout_marginTop="30dp"

                android:layout_gravity="center"

                android:id="@+id/go_registerButton"
                />

            <TextView
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_result"
                android:layout_marginTop="30dp"
                android:hint="result"
                />



        </LinearLayout>

    </LinearLayout>


</LinearLayout>